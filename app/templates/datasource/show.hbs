<div class="row">
  <div class="col s12">
    <h4>Datasource - {{text-titlecase model.id}}</h4>
  </div>
</div>
<div class="row">
	<div class="col m3 s12">
		{{materialize-date-input label='Start Date' value=startDateStr}}
	</div>
	<div class="col m3 s12">
		{{materialize-date-input label='End Date' value=endDateStr}}
	</div>
	<div class="col m3 s12">
		{{materialize-select
			label="Layout"
			content=allLayoutModes
			value=layoutMode
			optionValuePath="content.id"
			optionLabelPath="content.label"}}
	</div>
	<div class="col m3 s12">
		{{materialize-select
			label="Time Granularity"
			content=allTimeGranularities
			value=timeGranularity
			optionValuePath="content.id"
			optionLabelPath="content.label"}}
	</div>
</div>


<div class="row">
  <div class="col s12 m7">
    {{#each topKData as |topKDataItem|}}
      <div class="col s12 m6">
      {{druid-top-n-list title=topKDataItem.dimension content=topKDataItem.data}}
      </div>
    {{/each}}
  </div>
  <div class="col s12 m5">
    <h4>Time Series: {{timeSeriesData.length}}</h4>
  </div>
</div>